<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="24dp"
    tools:context=".fragment.forgotpass.TelegramMethod">

    <LinearLayout
        android:id="@+id/linerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_telegram_logo"
            app:tint="@color/primaryColor"
            android:layout_gravity="center">
        </ImageView>

        <TextView
            android:id="@+id/reset_pass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Lanjutkan dengan menggunakan Telegram"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/primaryColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reset_email_button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:text="Buka telegram"
            app:icon="@drawable/ic_telegram_logo"
            android:layout_above="@+id/reg_button"
            app:strokeColor="@color/primaryColor" />

    </LinearLayout>



</FrameLayout>